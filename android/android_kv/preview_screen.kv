#:import GroupScrollBar widget_sections.selection


<PreviewIconButton>
    user_font_size: '26sp'
    size_hint: None, None
    theme_text_color: 'Custom'
    text_color: 1, 1, 1, 1
    tooltip_bg_color: app.bg_color
    tooltip_text_color: app.text_color

<DropdownStack>
    canvas.before:
        Color:
            rgba: app.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 16, 16]


    height: app.item_row_height/2
    background_color: app.trans_list
    background_normal: ''
    color: app.text_color

<FloatingButton>
    size_hint: None, None
    size: dp(46), dp(46)
    elevation: 5
    md_bg_color: app.theme_cls.primary_color
    theme_text_color: 'Custom'
    text_color: app.text_color
    font_size: 20


<AndroidItemCard>
    id: card
    orientation: "vertical"
    size_hint: 1, None
    pos_hint: {"center_x": .5, "center_y": .5}
    item_title: item_title
    note_display: note_display
    amount: amount
    chevron: chevron

    BoxLayout:
        name: 'primary'
        id: primary
        size_hint: .95, 1
        pos_hint: {'x': .05, 'center_y': .5}


        Widget:
            size_hint: .05, 1
            disabled: True

        BoxLayout:
            pos_hint: {'x': .05, 'center_y': .5}
            size_hint: .7, 1

            MDLabel:
                id: item_title
                text: root.item_name
                theme_text_color: 'Custom'
                text_color: app.text_color
                halign: 'left'
                font_size: 32

            MDLabel:
                id: note_display
                size_hint: 0, 0
                theme_text_color: 'Custom'
                text_color: app.text_color
                halign: 'left'
                valign: 'top'
                font_size: 32


        MDFlatButton:
            root: card
            id: amount
            pos: chevron.pos[0] - self. width, primary.pos[1]
            size_hint: None, 1
            theme_text_color: 'Custom'
            text_color: app.text_color
            text: card.defaults_list[-1]
            font_size: 48
            width: dp(88)
            on_release:
                self.color: app.bg_color


        MDIconButton:
            id: chevron

            icon: "chevron-right"
            user_font_size: sp(40)
            pos_hint: {'right': 1, 'center_y': .5}
            size_hint: None, 1
            height: self.size[1]
            on_release:
                root.show_details()

        Widget:
            size_hint: .05, 1
            disabled: True


