<PreviewScreen>
    canvas:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    ListScrollBar:


        size_hint: 1, 1
        color: app.bg_color
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['bars']
        smooth_scroll_end: 10
        smooth_scroll_end: 10

        ItemCardContainer:

            padding: dp(16)
            spacing: dp(4)
            orientation: 'vertical'
            size_hint: 1, None
            height: 0
            width: self.parent.width
            minimum_height: self.parent.height

