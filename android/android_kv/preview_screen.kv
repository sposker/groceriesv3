#:import GroupScrollBar widget_sections.selection
#:import MDIconButton kivymd.uix.button
#:import MDTextField kivymd.uix.button
#:import DefaultsDialog widget_sections.dialogs


<PreviewIconButton>
    user_font_size: '26sp'
    size_hint: None, None
    theme_text_color: 'Custom'
    text_color: 1, 1, 1, 1
    tooltip_bg_color: app.bg_color
    tooltip_text_color: app.text_color

<DropdownStack>
    canvas.before:
        Color:
            rgba: app.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0, 0, 16, 16]


    height: app.item_row_height/2
    background_color: app.trans_list
    background_normal: ''
    color: app.text_color

<FloatingButton>
    size_hint: None, None
    size: dp(46), dp(46)
    elevation: 5
    md_bg_color: app.theme_cls.primary_color
    theme_text_color: 'Custom'
    text_color: app.text_color
    font_size: 20



<ItemCard>
    id: card
    orientation: "vertical"
    size_hint: 1, None
    height: self.minimum_height
    pos_hint: {"center_x": .5, "center_y": .5}
    primary: primary
    item_title: item_title
    note_display: note_display
    note_input: note_input
    amount: amount
    chevron: chevron
    expansion: expansion
    history: history
    delete_card: delete_card

    BoxLayout:
        name: 'primary'
        id: primary
        size_hint: .95, None
        pos_hint: {'x': .05, 'center_y': .5}
        height: dp(72)

#        Widget:
#            size_hint: .05, 1
#            disabled: True

        BoxLayout:
            pos_hint: {'x': .05, 'center_y': .5}
            size_hint: .7, 1

            MDLabel:
                id: item_title
                text: root.item_name
                theme_text_color: 'Custom'
                text_color: app.text_color
                halign: 'left'
                font_size: 22

            MDLabel:
                id: note_display
                size_hint: 0, 0
                theme_text_color: 'Custom'
                text_color: app.text_color
                halign: 'left'
                valign: 'top'
                font_size: 16


        DefaultsButton:
            root: card
            id: amount
            pos: chevron.pos[0] - self. width, primary.pos[1]
            size_hint: None, None
            theme_text_color: 'Custom'
            text_color: app.text_color
            text: card.defaults_list[-1]
            font_size: 24
            size: dp(88), dp(72)
            on_release:
                root.defaults_dropdown.open(self)
                self.color: app.bg_color


        PreviewIconButton:
            id: chevron

            icon: "chevron-down"
            pos_hint: {'right': 1, 'center_y': .5}
            size_hint: None, 1
            height: self.size[1]
            on_release:
                root.resize()

        Widget:
            size_hint: .05, 1
            disabled: True


    BoxLayout:
        id: expansion
        size_hint: 1, None
        height: root.expansion_height

        NoteInput:
            id: note_input
            root: card
            size_hint: 1, 1
            name: 'note_input'
            pos_hint: {'center_x': .5, 'center_y': .5}


        PreviewIconButton:
            id: history
            icon: "history"
            pos_hint: {'center_x': .5, 'center_y': .5}
            tooltip_text: 'Item History'

        PreviewIconButton:
            id: delete_card
            icon: "delete"
            pos_hint: {'center_x': .5, 'center_y': .5}
            tooltip_text: 'Remove Item'
            on_release:
                root.kvlang_remove_card()


<PreviewScreen>

    ListScrollBar:

        bar_width: self.parent.height * 0.024
        size_hint: 1, 1
        color: app.elem_color
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ['bars']
        smooth_scroll_end: 10
        smooth_scroll_end: 10

        ItemCardContainer:

            spacing: dp(4)
            orientation: 'vertical'
            size_hint: .95, None
            height: 0
            width: self.parent.width
            minimum_height: self.parent.height

