#:import GroupScrollBar widget_sections.selection


<MyMDIconButton>
    user_font_size: app.text_base_size * 4/3
    size_hint: 1/5, 1
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    tooltip_bg_color: app.bg_color
    tooltip_text_color: app.text_color


<ListFunctionsBar>

    MyMDIconButton:
        name: 'toggle_asc_desc'
        icon: "sort-descending"
        tooltip_text: "Current: Descending"

    MyMDIconButton:
        name: 'alphabetical'
        icon: "sort-alphabetical"
        tooltip_text: 'SortBy: A-Z'
        group: 'members'

    MyMDIconButton:
        name: 'group'
        icon: "cards-outline"
        tooltip_text: 'SortBy: Group'
        group: 'members'

    MyMDIconButton:
        name: 'time'
        icon: "clock-fast"
        tooltip_text: "SortBy: Time Added"
        group: 'members'
        text_color: app.theme_cls.accent_color

    MyMDIconButton:
        name: 'reset'
        icon: "restart"
        tooltip_text: 'Clear List'


<PreviewIconButton>
    user_font_size: '26sp'
    size_hint: None, None
    theme_text_color: 'Custom'
    text_color: 1, 1, 1, 1
    tooltip_bg_color: app.bg_color
    tooltip_text_color: app.text_color


<FloatingButton>
    size_hint: None, None
    size: dp(46), dp(46)
    elevation: 5
    md_bg_color: app.theme_cls.primary_color
    theme_text_color: 'Custom'
    text_color: app.text_color
    font_size: 20


<AndroidItemCard>
    id: card
    orientation: "vertical"
    size_hint: 1, None
    pos_hint: {"center_x": .5, "center_y": .5}
    item_title: item_title
    note_display: note_display
    amount: amount
    chevron: chevron

    BoxLayout:
        name: 'primary'
        id: primary
        size_hint: 1, 1
        pos_hint: {'x': .05, 'center_y': .5}


        Widget:
            size_hint: .05, 1
            disabled: True

        BoxLayout:
            pos_hint: {'x': .05, 'center_y': .5}
            size_hint: .7, 1
            orientation: 'vertical'

            MDLabel:
                id: item_title
                text: root.item_name
                theme_text_color: 'Custom'
                text_color: app.text_color
                halign: 'left'
                font_size: app.text_base_size * .8
                size_hint: 1, 1

            FloatLayout:
                size_hint: 1, None
                height: 0

                MDLabel:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 0, .2
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    id: note_display
                    size_hint: None, None
                    pos: root.pos[0] + root.width * .1, root.pos[1] + root.height * .15
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    font_size: app.text_base_size * .5
                    halign: 'left'
                    height: 0
                    width: root.width



        MDFlatButton:
            root: card
            id: amount
            pos: chevron.pos[0] - self. width, primary.pos[1]
            size_hint: None, 1
            theme_text_color: 'Custom'
            text_color: app.text_color
            text: card.defaults_list[-1]
            font_size: app.text_base_size
            width: dp(88)
            on_release:
                root.open_defaults_dialog(self)


        MDIconButton:
            id: chevron
            icon: "chevron-right"
            user_font_size: sp(40)
            pos_hint: {'right': 1, 'center_y': .5}
            size_hint: None, 1
            height: self.size[1]
            on_release:
                root.show_details()

        Widget:
            size_hint: .05, 1
            disabled: True


<PreviewScreen>
    canvas:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'

        ListFunctionsBar:
            size_hint: 1, .15

        ListScrollBar:

            size_hint: 1, .85
            color: app.bg_color
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['content']
            smooth_scroll_end: 10

            ItemCardContainer:

                padding: dp(16)
                spacing: dp(4)
                orientation: 'vertical'
                size_hint: 1, None
                height: 0
                width: self.parent.width
                minimum_height: self.parent.height

