


<SectionDivider@MDLabel>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    width: dp(2)
    size_hint: None, 1/3
    pos_hint: {'center_x': .5, 'center_y': .5}

<SectionHeader>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    size_hint: 1, None
    height: app.item_row_height

    MDLabel:
        size_hint: .85, 1
        font_style: 'H4'
        halign: 'center'
        valign: 'bottom'
        color: app.theme_cls.primary_color
#        font_size: 40
        font_size: app.text_base_size / 2
        text: root.group.name

    SectionDivider:

    MDFlatButton:
        size_hint: None , 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_style: 'Custom'
        halign: 'center'
#        height: app.item_row_height
        text_color: app.text_color
        text: 'Add Item'
        font_size: app.text_base_size * 2/5
        on_release:
            Factory.AddItemDialog(root.group).open()


<DisplayGrid>

#    canvas.before:
#        Color:
#            rgba: .3,.1,.6,.4
#        Rectangle:
#            size: self.size
#            pos: self.pos

    size_hint: 1, None
    height: app.item_row_height*9/8

    app: app
    spacing: dp(6)
    size_hint: 1, None
    cols: 2


<LongPressToggle>

    theme_text_color: 'Custom'
    icon: 'checkbox-blank-outline'
    orientation: 'horizontal'
    font_size: 22
    user_font_size: 22
    size_hint: 1, None
    height: app.item_row_height
#    text_color: app.text_color
    md_bg_color: app.card_color
    padding: 0
    spacing: dp(2)
    on_release:
        self.do_toggle()


    BoxLayout:
        size_hint: None, 1
        width: root.width
        padding: dp(8), 0
        spacing: dp(4)

        MDLabel:
            theme_text_color: 'Custom'
            text: root.display_name
            font_size: sp(root.font_size)
            font_name: self.font_name
            text_size: (None, root.height)
            height: root.height
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'

        SectionDivider:

        MDIcon:
            theme_text_color: 'Custom'
            icon: root.icon
            font_size: root.font_size
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'
            size_hint: None, 1
            width: dp(32)


