#:kivy 2.0

#:import MDLabel kivymd.uix.label
#:import MDFlatButton kivymd.uix.button

<SectionDivider@MDLabel>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    width: dp(2)
    size_hint: None, .5
    pos_hint: {'center_x': .5, 'center_y': .5}

<SectionTitle>
#    canvas:
#        Color:
#            rgba: app.elem_color
#        RoundedRectangle:
#            size: self.size
#            pos: self.pos
#
#    height: app.item_row_height*9/8

    MDLabel:
        size_hint: 1, 1
        font_style: 'H4'
        halign: 'center'
        color: 1,1,1,1
        text: root.group

<SectionAddItem>

#    canvas:
#        Color:
#            rgba: app.elem_color
#        RoundedRectangle:
#            size: self.size
#            pos: self.pos
#            radius: 40, 40, 40, 40

    size_hint: None, None
    height: app.item_row_height*9/8

    MDFlatButton:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_style: 'custom'
        halign: 'center'
        text_color: app.text_color
        text: 'Add Item'
        font_size: 24
        on_release:
            self.parent.on_release()

    SectionDivider:


    ItemCheckbox:
        size_hint: None, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        icon: 'cart-plus'
        theme_text_color: 'Custom'
        text_color: app.text_color
        on_release:
            self.parent.on_release()

<DisplaySubsection>

    app: app
    spacing: dp(6)
    size_hint: 1, None
    cols: 2


<ToggleLayout>

    theme_text_color: 'Custom'
    icon: 'checkbox-blank-outline'
    orientation: 'horizontal'
    font_size: 22
    user_font_size: 22
    size_hint: 1, None
    height: app.item_row_height
    text_color: app.text_color
    md_bg_color: app.card_color
    padding: 0
    on_release:
        self.do_toggle()

    BoxLayout:
        size_hint: None, 1
        width: root.width
        padding: dp(8), 0
        spacing: dp(4)

        MDLabel:
            theme_text_color: 'Custom'
            text: root.display_name
            font_size: sp(root.font_size)
            font_name: self.font_name
#            size_hint: 1, 1
            text_size: (None, root.height)
            height: root.height
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'

        SectionDivider:

        MDIcon:
            theme_text_color: 'Custom'
            icon: root.icon
            font_size: root.font_size
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'
            size_hint: None, 1
            width: dp(32)

<GroupScrollBar>

#    color: app.elem_color
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ['content']
    smooth_scroll_end: 10

    GroupDisplay:
#        canvas.before:
#            Color:
#                rgba: app.elem_color
#            RoundedRectangle:
#                size: self.size
#                pos: self.pos
#                radius: 40, 0, 40, 40

        orientation: 'vertical'
        size_hint: 1, None
        padding: dp(16)
        spacing: dp(16)

<SelectionScreen>

    canvas:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    name: 'selection_screen'
    GroupScrollBar: