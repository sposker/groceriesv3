#:kivy 2.0
#:import Factory kivy.factory.Factory
#:import Clock kivy.clock


<LoadScreen>
    name: "load_android"
    canvas:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    Image:
        background_color: 1,1,1,1
        source: 'src/android100.png'
        pos_hint: {"center_x": 0.5, "top":0.65}
        size_hint:0.8, 0.25
    Label:
        color: app.text_color
        pos_hint: {"center_x": 0.5, "top":0.5}
        size_hint: 0.8, 0.2
        text: "Loading..."
        font_size: app.text_base_size


<Runner>
    orientation: "vertical"

    canvas:
        Color:
            rgba: 0, 0, 0, .2
        Rectangle:
            pos: self.pos
            size: self.size

    MDToolbar:
        id: base_toolbar
        title: ''
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        right_action_items:[['arrow-right-bold-outline', lambda x: setattr(swiper_manager, 'current', 'preview')]]
        disabled: True

    NavigationLayout:

        ScreenManager:
            id: swiper_manager
            LoadScreen:

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer