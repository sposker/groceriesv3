<ViewSortButton>
    sort_dir: 'ascending'
    halign: 'center'
#    size_hint: 1, 1
    font_size: 20
    theme_text_color: 'Custom'
    text_color: app.text_color
    on_release:
        self.sort()

<AccessTabbedPanel>
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: 1, 1
    default_tab: item_details
    default_tab_cls: 'AccessSpinnerButton'
    tab_width: Window.width/4

    TabbedPanelItem:
        id: mod_groups
        text: 'Group Names & Order'
        BoxLayout:
            orientation: 'vertical'


    TabbedPanelItem:
        id: item_details
        text: 'Item Details'

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(8)
            padding: dp(8)

            BoxLayout:
                default_size: None, dp(72)
                default_size_hint: 1, None
                font_size: 20
                spacing: dp(8)
                padding: dp(8)
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height

                ViewSortButton:
                    sort_key: 'item_uid'
                    rv_base: item_details
                    text: 'I-ID'
                    size_hint_max_x: dp(48)

                ViewSortButton:
                    sort_key: 'item_name'
                    rv_base: item_details
                    size_hint: 1, 1
                    text: "ITEM NAME"

                ViewSortButton:
                    sort_key: 'item_group_uid'
                    rv_base: item_details
                    text: "G-ID"
                    size_hint_max_x: dp(42)

                ViewSortButton:
                    sort_key: 'item_group_name'
                    rv_base: item_details
                    size_hint: 1, 1
                    text: "GROUP NAME"

                MDLabel:
                    halign: 'center'
                    text: "1ST"
                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(42)

                MDLabel:
                    halign: 'center'
                    text: "2ND"
                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(42)

                MDLabel:
                    halign: 'center'
                    text: "3RD"
                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(42)

                ViewSortButton:
                    sort_key: 'item_note'
                    rv_base: item_details
                    size_hint: 1, 1
                    text: "ITEM NOTE"

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'SAVE'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'RESET'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'DEL'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color


    TabbedPanelItem:
        id: locs_map
        text: 'Item: Location Mapping'
        BoxLayout:
            orientation: 'vertical'

#            AccessRecycleView:
#                id: locs_map_scroll


    TabbedPanelItem:
        id: mod_locs
        text: 'Location Names & Order'
        BoxLayout:
            orientation: 'vertical'

#            AccessRecycleView:
#                id: mod_locs_scroll


<AccessRoot>

    orientation: 'vertical'
#    padding: dp(12)
    spacing: dp(12)

    BoxLayout:
        canvas.before:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos

        icon_color: app.text_color
        spacing: dp(40)
        padding: dp(4)
        size_hint: 1, .05
        spacing: dp(8)

        AccessMidButton:
            text: 'New Entry'
            on_release:
                self.add_new_entry(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Update All'
            on_release:
                self.update_from_view(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Save to Disk'
            on_release:
                self.dump_data(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Exit without saving'
            on_release:
                self.stop_app()

    AccessTabbedPanel:
        id: access_tabbed_panel