# Various layouts for recycleviews and root widget for app

#:import MDApp kivymd.app

<AccessBaseLayout>
    default_size: None, dp(72)
    default_size_hint: 1, None
    font_size: 20
    spacing: dp(8)
    padding: dp(8)
    orientation: 'horizontal'
    size_hint: 1, None
    height: self.minimum_height


<ModGroupLayout>
#    default_size: None, dp(128)
    size_hint: .4, 1
    pos_hint: {'center_x': .5, 'center_y': .5}

    MDLabel:
        size_hint: .12, 1
        text: root.group_uid
        font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color


    TextInput:
        background_color: 1, 1, 1, .5
        background_normal: '.8, .8, .8, .5'
        text: root.group_name
        font_size: 22
        text_color: app.text_color


<ItemDetailsLayout>

    MDLabel:
        widget_name: 'item_uid'
        size_hint: .4, 1
        text: root.item_uid
        font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color
        size_hint_max_x: dp(48)

    TextInput:
        widget_name: 'item_name'
        background_color: 1, 1, 1, .5
        background_normal: '.8, .8, .8, .5'
        text: root.item_name
        font_size: 22
        text_color: app.text_color

    MDLabel:
        widget_name: 'group_uid'
        size_hint: .4, 1
        text: root.item_group_uid
        font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color
        size_hint_max_x: dp(42)

    AccessSpinner:
        widget_name: 'group_name'
        text: root.item_group_name

    AccessInputShort:
        widget_name: 'defaults0'
        text: root.item_default_0

    AccessInputShort:
        widget_name: 'defaults1'
        text: root.item_default_1

    AccessInputShort:
        widget_name: 'defaults2'
        text: root.item_default_2

    TextInput:
        widget_name: 'item_note'
        background_color: 1, 1, 1, .5
        background_normal: '.8, .8, .8, .5'
        font_size: 22
        theme_text_color: 'Custom'
        text_color: app.text_color
        text: root.item_note

    MDIconButton:
        size_hint_max_x: dp(48)
        icon: 'content-save-outline'
        user_font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color
        on_release:
            root.update_value()

    MDIconButton:
        size_hint_max_x: dp(48)
        icon: 'restart'
        user_font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color
        on_release:
            root.reset_values()

    MDIconButton:
        size_hint_max_x: dp(48)
        icon: 'delete-alert'
        user_font_size: 20
        theme_text_color: 'Custom'
        text_color: app.text_color
        on_release:
            root.reset_values()






<ItemLocationLayout>

    size_hint: 1, None
