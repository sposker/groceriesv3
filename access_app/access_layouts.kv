                default_size: None, dp(72)
                default_size_hint: 1, None
                font_size: 20
                spacing: dp(4)
                padding: dp(8)
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height

#                Widget:
#                    size_hint: None, 1
#                    width: dp(8)

                ViewSortButton:
                    sort_key: 'item_uid'
                    rv_base: item_details
                    text: 'I-ID'
