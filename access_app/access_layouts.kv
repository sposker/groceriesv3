                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(44)

                MDLabel:
                    halign: 'center'
                    text: "2ND"
                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(44)

                MDLabel:
                    halign: 'center'
                    text: "3RD"
                    font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color
                    size_hint_max_x: dp(44)

                ViewSortButton:
                    sort_key: 'item_note'
                    rv_base: item_details
                    size_hint: 1, 1
                    text: "ITEM NOTE"

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'SAVE'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'RESET'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color

                MDLabel:
                    halign: 'center'
                    size_hint_max_x: dp(48)
                    text: 'DEL'
                    user_font_size: 20
                    theme_text_color: 'Custom'
                    text_color: app.text_color


    TabbedPanelItem:
        id: locs_map
