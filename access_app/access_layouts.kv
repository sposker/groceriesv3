                ViewSortButton:
                    sort_key: 'item_name'
                    rv_base: item_details
                    size_hint: 1, 1
                    text: "ITEM NAME"

                ViewSortButton:
                    sort_key: 'item_group_uid'
                    rv_base: item_details
