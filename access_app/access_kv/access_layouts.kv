<AccessRoot>

    orientation: 'vertical'
#    padding: dp(12)
    spacing: dp(12)

    BoxLayout:
        canvas.before:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos

        icon_color: app.text_color
        spacing: dp(40)
        padding: dp(4)
        size_hint: 1, .05
        spacing: dp(8)

        AccessMidButton:
            text: 'New Entry'
            on_release:
                self.add_new_entry(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Update All'
            on_release:
                self.update_from_view(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Save to Disk'
            on_release:
                self.dump_data(access_tabbed_panel.current_tab)

        AccessMidButton:
            text: 'Exit without saving'
            on_release:
                self.stop_app()

    AccessTabbedPanel:
        id: access_tabbed_panel


