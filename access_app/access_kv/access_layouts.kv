<AccessTabbedPanel>
    default_tab: default_tab_id
    default_tab_cls: 'AccessSpinnerButton'
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: 1, 1
    tab_width: self.width/4

    TabbedPanelItem:
        text: 'DisplayGroup Names & Order'
        ModGroupContent:
            id: mod_groups
            orientation: 'vertical'



    TabbedPanelItem:
        text: 'Item Details'
        id: default_tab_id

        ItemDetailsContent:
            id: item_details
            orientation: 'vertical'
#            spacing: dp(16)
#            padding: dp(8)

            BoxLayout:
                default_size: self.width - dp(12), dp(72)
                default_size_hint: None, None
                font_size: 20
                spacing: dp(4)
                padding: dp(8)
                orientation: 'horizontal'
                size_hint: 1, None
                height: self.minimum_height

#                Widget:
#                    size_hint: None, 1
#                    width: dp(8)

