                    size_hint_max_x: dp(48)

                ViewSortButton:
                    sort_key: 'item_name'
                    rv_base: item_details
                    size_hint: .4, 1
                    text: "ITEM NAME"

                ViewSortButton:
                    sort_key: 'item_group_uid'
