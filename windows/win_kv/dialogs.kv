            size: self.size
            pos: self.pos

    background_color: 1, 1, 1, 0
    separator_color: 1, 1, 1, 0
#    title_size: app.text_scale * 1.25
#    title_color: app.theme.header_text
    size_hint: None, None
    size: (600, 400)
#    auto_dismiss: False
    title: 'Placeholder'

    Button:
        size_hint:(.1, .4)
        text: 'DISMISS'
        on_release:
            root.do_exit()

