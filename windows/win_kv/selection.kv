#:kivy 2.0


<SectionDivider@MDLabel>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    width: dp(2)
    size_hint: None, .5
    pos_hint: {'center_x': .5, 'center_y': .5}

<SectionHeader>
    canvas.before:
        Color:
            rgba: app.theme_cls.primary_color
        Line:
            points: [(self.x, self.y + .1*self.height), (self.x + self.width, self.y + .1*self.height)]
            width: dp(4)
            cap: 'none'

        Color:
            rgba: app.elem_color
        RoundedRectangle:
            size: self.size[0], .85*self.size[1]
            pos: self.x, self.y + self.height*.15
            radius: 18, 18, 0, 0


    size_hint: 1, None
    height: app.item_row_height*11/8

    MDLabel:
        size_hint: .85, 1
        font_style: 'H3'
        halign: 'center'
        valign: 'bottom'
        color: app.theme_cls.primary_color
#        height: app.item_row_height*9/8
        text: root.group.name

    SectionDivider:

    MDFlatButton:
        size_hint: None , 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_style: 'Custom'
        halign: 'center'
#        height: app.item_row_height
        text_color: app.text_color
        text: 'Add Item'
        font_size: 24
        on_release:
            Factory.AddItemDialog(root.group).open()


<DisplayGrid>

#    canvas.before:
#        Color:
#            rgba: .3,.1,.6,.4
#        Rectangle:
#            size: self.size
#            pos: self.pos

    size_hint: 1, None
#    height: app.item_row_height*9/8
    app: app
    spacing: dp(6)
    size_hint: 1, None
    cols: 3


<PairedToggleButtons>

    theme_text_color: 'Custom'
    icon: 'checkbox-blank-outline'
    orientation: 'horizontal'
    font_size: 22
    user_font_size: 22
    size_hint: 1, None
    height: app.item_row_height
#    text_color: app.text_color
    md_bg_color: app.card_color
    padding: 0
    on_release:
        self.do_toggle()


    BoxLayout:
        size_hint: None, 1
        width: root.width
        padding: dp(8), 0
        spacing: dp(4)

        MDLabel:
            theme_text_color: 'Custom'
            text: root.display_name
            font_size: sp(root.font_size)
            font_name: self.font_name
            text_size: (None, root.height)
            height: root.height
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'

        SectionDivider:

        MDIcon:
            theme_text_color: 'Custom'
            icon: root.icon
            font_size: root.font_size
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'
            size_hint: None, 1
            width: dp(32)



<GroupScrollHelper>

    Label:
        size_hint: (.98, 1)

    GroupScrollBar:

<GroupScrollBar>

    bar_width: self.parent.width * 0.016
    color: app.elem_color
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ['bars']
    smooth_scroll_end: 10

    GroupDisplay:
