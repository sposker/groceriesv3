<Divider@Widget>
    canvas.after:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    size_hint: .9, None
    height: dp(2)
    pos_hint: {'center_x': .5, 'center_y': .5}

<MainScreen>
    name: "main"

    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

#    NavBar:
#        size_hint: 1, .08


    WinNavBar:
        id: toolbar
        size_hint: 1, None
        height: 54
        pos_hint: {'center_x': .5, 'top': 1}


    BoxLayout:
        size_hint: 1, None
        height: root.height*.99 - toolbar.height
        padding: dp(8)
#        spacing: dp(8)

        GroupScrollHelper:
            id: selection
            size_hint: 1/1.618, 1

        BoxLayout:
            canvas.before:
                Color:
                    rgba: app.elem_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [24, 24, 0, 0]
            orientation: 'vertical'
            size_hint: (1 - 1/1.618), 1
            padding: dp(8)
            spacing: dp(4)

            SearchBar:

            Divider:

            ListFunctionsBar:

            Divider:

            ListScrollHelper:

            Widget:
                size_hint: .9, None
                height: dp(2)
                pos_hint: {'center_x': .5, 'center_y': .5}




<LoadScreen>
    name: "loading"

    Image:
        source: 'data\\src\\desktop96.png'
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        size_hint:0.25, 0.25
    MDLabel:
        color: app.text_color
        halign: 'center'
        pos_hint:{"center_x": 0.5, "top":0.425}
        size_hint:1, .1
        text: "Loading..."
        font_size: app.text_base_size * 4/5

<GroManager>
    id: manager
    current: "loading"

    LoadScreen:
        name: "loading"
