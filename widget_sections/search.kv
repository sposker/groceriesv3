#:import MDIconButton kivymd.uix.button

<MyMDIconButton>
    user_font_size: '36sp'
    size_hint: 1/7, 1
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    tooltip_bg_color: app.dh_color
    tooltip_text_color: app.text_color


<ListFunctionsBar>

    size_hint: 1, .1

    MyMDIconButton:
        name: 'toggle_asc_desc'
        icon: "sort-ascending"
        tooltip_text: "Sort: Ascending"

    MyMDIconButton:
        name: 'alphabetical'
        icon: "sort-alphabetical"
        tooltip_text: 'SortBy: A-Z'

    MyMDIconButton:
        name: 'group'
        icon: "cards-outline"
        tooltip_text: 'SortBy: Group'

    MyMDIconButton:
        name: 'time'
        icon: "clock-fast"
        tooltip_text: "SortBy: Time Added"

    MyMDIconButton:
        name: 'open'
        icon: "folder-open-outline"
        tooltip_text: 'Load List'

    MyMDIconButton:
        name: 'reset'
        icon: "restart"
        tooltip_text: 'Clear List'

    MyMDIconButton:
        name: 'save'
        icon: "content-save-outline"
        tooltip_text: 'Save List'



<SearchBar>
    size_hint: 1, .105
    normal_color: app.bg_color

    icon_type: 'left'
    icon_left: 'magnify'
    color: app.elem_color
    cursor_color: app.text_color
    disabled_color: 1,1,1,.1
#    disabled: True
    focus: False
    font_size: 24
    hint_text: 'Coming Soon'
    hint_text_color: (1,1,1,0)
    multiline: False
    text: 'Disabled'
    write_tab: False
