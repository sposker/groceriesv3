<ToggleLayout>

    theme_text_color: 'Custom'
    icon: 'checkbox-blank-outline'
    orientation: 'horizontal'
    font_size: 22
    user_font_size: 22
    size_hint: 1, None
    height: app.item_row_height
    text_color: app.text_color
    md_bg_color: app.card_color
    padding: 0
    on_release:
        self.do_toggle()

    BoxLayout:
        size_hint: None, 1
        width: root.width
        padding: dp(8), 0
        spacing: dp(4)

        MDLabel:
            theme_text_color: 'Custom'
            text: root.display_name
            font_size: sp(root.font_size)
            font_name: self.font_name
#            size_hint: 1, 1
            text_size: (None, root.height)
            height: root.height
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'

        SectionDivider:

        MDIcon:
            theme_text_color: 'Custom'
            icon: root.icon
            font_size: root.font_size
            text_color: root.text_color
            valign: 'middle'
            halign: 'center'
            size_hint: None, 1
            width: dp(32)



<GroupScrollHelper>

    Label:
        size_hint: (.98, 1)

    GroupScrollBar:

<GroupScrollBar>

    bar_width: self.parent.width * 0.016
    color: app.elem_color
    do_scroll_x: False
    do_scroll_y: True
    scroll_type: ['bars']
    smooth_scroll_end: 10

    GroupDisplay:
        canvas.before:
            Color:
                rgba: app.elem_color
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: 40, 0, 40, 40

        orientation: 'vertical'
        size_hint: .98, None
        padding: dp(6)