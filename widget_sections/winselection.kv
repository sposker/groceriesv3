#:kivy 2.0
#:import platform kivy.utils

#:import MDLabel kivymd.uix.label
#:import MDFlatButton kivymd.uix.button

<SectionDivider@MDLabel>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    width: dp(2)
    size_hint: None, .5
    pos_hint: {'center_x': .5, 'center_y': .5}

<SectionTitle>

    MDLabel:
        size_hint: 1, None
        font_style: 'H4'
        halign: 'center'
        color: 1,1,1,1
        height: app.item_row_height*9/8
        text: root.group

<SectionAddItem>

    canvas.before:
        Color:
            rgba: app.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 40, 40, 40, 40

    size_hint: None, None
    height: app.item_row_height*9/8

    MDFlatButton:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_style: 'custom'
        halign: 'center'
        text_color: app.text_color
        text: 'Add Item'
        font_size: 24
        on_release:
            self.parent.on_release()

    SectionDivider:


    ItemCheckbox:
        size_hint: None, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        icon: 'cart-plus'
        theme_text_color: 'Custom'
        text_color: app.text_color
        on_release:
            self.parent.on_release()

<DisplaySubsection>

    app: app
    spacing: dp(6)
    size_hint: 1, None


